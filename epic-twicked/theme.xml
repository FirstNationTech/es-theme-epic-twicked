        </text>
        <!-- Place metadata -->
        <text name="md_lbl_rating">
            <pos>0.428 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <rating name="md_rating">
            <pos>0.5 0.957</pos>
            <size>0 0.020</size>
