        </rating>
        <text name="md_lbl_players">
            <pos>0.615 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="md_players">
            <fontPath>./_art/Acre.otf</fontPath>
            <color>888888</color>
            <fontSize>0.0186</fontSize>
            <pos>0.672 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="md_lbl_genre">
            <pos>0.770 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="md_genre">
            <pos>0.817 0.932</pos>
            <size>0.4 0.07</size>
        </text>
