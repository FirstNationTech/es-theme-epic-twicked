            <forceUppercase>0</forceUppercase>
            <fontPath>./_art/Acre.otf</fontPath>
            <fontSize>0.0186</fontSize>
        </text>
        <text name="md_genre, md_players">
            <color>888888</color>
            <forceUppercase>0</forceUppercase>
