        </text>
        <text name="players_lbl_2" extra="true">
            <text>players</text>
            <pos>0.689 0.932</pos>
            <size>0.06 0.07</size>
        </text>
        <text name="txt_descript" extra="true">
            <text>Description</text>
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.0186</fontSize>
            <color>ffffff</color>
            <origin>0 0</origin>
            <pos>0.429 0.724</pos>
            <size>0.06 0.07</size>
        </text>
    </view>
<feature supported="video">
        <view name="video">
            <video name="md_video">
                <origin>0.5 0.5</origin>
                <pos>0.66 0.38</pos>
                <maxSize>0.64 0.64</maxSize>
                <delay>2</delay>
                <showSnapshotNoVideo>true</showSnapshotNoVideo>
                <showSnapshotDelay>true</showSnapshotDelay>
            </video>
        </view>
    </feature>
</theme>
