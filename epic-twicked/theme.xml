<theme>
<formatVersion>4</formatVersion>
 

<!-- System View -->

<feature supported="carousel">
	<view name="system">
	 <image name="background" extra="true">
		<tile>false</tile>
            <path>./_art/var/dot.png</path>
            <tile>false</tile>
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
	 </image>
	    <image name="poster" extra="true">
            <path>./${system.theme}/art/poster.jpg</path>
            <tile>false</tile>
            <origin>1 0</origin>
            <pos>1 0</pos>
            <size>0 1</size>
        </image>
		<image name="controller" extra="true">
            <path>./${system.theme}/art/controller.png</path>
            <tile>false</tile>
            <origin>0 0.5</origin>
            <pos>0.084 0.774</pos>
            <maxSize>0.35 0.35</maxSize>
        </image>
	<!-- LOOK INTO THIS 	-->
        <carousel name="systemcarousel">
            <type>vertical</type>
            <color>00000000</color>
            <origin>1 1</origin>
            <pos>1 1</pos>
            <size>0.01 0.01</size>
            <logoScale>1</logoScale>
            <logoSize>0.01 0.01</logoSize>
            <maxLogoCount>0</maxLogoCount>
        </carousel>

        <text name="sys_line1" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>1</forceUppercase>
            <color>FFFFFF</color>
            <fontSize>0.048</fontSize>
            <origin>0 0</origin>
            <pos>0.082 0.08</pos>
            <size>0 0</size>
        </text>
        <text name="sys_line2" extra="true">
            <fontPath>./_art/BebasNeue.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>1</forceUppercase>
            <color>FFFFFF</color>
            <fontSize>0.18</fontSize>
            <origin>0 0</origin>
            <pos>0.082 0.088</pos>
            <size>0 0</size>
        </text>
        <text name="systemInfo">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <backgroundColor>00000000</backgroundColor>
            <forceUppercase>1</forceUppercase>
            <color>203040</color>
            <origin>0 0</origin>
            <pos>0.082 0.272</pos>
            <size>0.200 0.039</size>
            <fontSize>0.0315</fontSize>
        </text>
        <text name="shortdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.021</fontSize>
            <color>262626</color>
            <origin>0 0</origin>
            <pos>0.084 0.345</pos>
            <size>0.320 0.033</size>
        </text>
        <text name="longdescription" extra="true">
            <fontPath>./_art/Acre.otf</fontPath>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
            <fontSize>0.021</fontSize>
            <color>262626</color>
            <lineSpacing>1.18</lineSpacing>
            <origin>0 0</origin>
            <pos>0.084 0.322</pos>
            <size>0.28 0.20</size>
        </text>
	</view>
</feature>





<!-- Gamelist View -->

<view name="basic, detailed, video, grid">

 <image name="background" extra="true">
	<tile>false</tile>
	<path>./_art/var/dot.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
 </image>
	<textlist name="gamelist">
		<selectorColor>1c1c1c</selectorColor>
		<selectedColor>F8F8F8</selectedColor>
		<selectorHeight>0.05</selectorHeight>
		<primaryColor>585858</primaryColor>
		<secondaryColor>888888</secondaryColor>
		<fontPath>./_art/Acre.otf</fontPath>
		<alignment>left</alignment>
		<pos>0 0.0833</pos>
		<size>0.323 0.8513</size>
		<fontSize>0.03</fontSize>
		<lineSpacing>1.683</lineSpacing>
		<horizontalMargin>0.02864</horizontalMargin>
	</textlist>
	<image name="logo">
		<tile>false</tile>
		<origin>0.5 0.5</origin>
		<pos>0.115 0.04</pos>
		<maxSize>0.208 0.056</maxSize>
	</image>
 
 <text name="shortdescription" extra="true">
	<pos>1 1</pos>
 </text>
 
 <text name="longdescription" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<forceUppercase>0</forceUppercase>
	<fontSize>0.02</fontSize>
	<color>818181</color>
	<origin>0.5 0.5</origin>
	<pos>0.789 0.821</pos>
	<size>0.25 0.2</size>
 </text>
 
 <text name="md_description">
